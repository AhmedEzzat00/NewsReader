<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="8dp"
        android:layout_margin="12dp"
        android:id="@+id/card_view">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_card"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:clickable="false"
                android:scaleType="fitXY"
                tools:src="#404044" />

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                tools:text="Square will offer its new crypto employees payment in Bitcoin and also this text must appear!"
                android:layout_marginStart="4dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/description_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:textSize="@dimen/description_size"
                tools:fontFamily="@font/antic"
                android:layout_marginStart="4dp"
                tools:text="The once-thriving resort city of in Mexico has become a somewhat lawless place. It is, in many ways, a perfect yet imperfect place for crypto-loving anarchists to gather each year."
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
